@model List<Vizi.Models.Restaurant>
@{
    ViewBag.Title = "Vizi";
}


<div class="s004">

    <div id="form">
        <fieldset>
            <legend>WHAT ARE YOU LOOKING FOR?</legend>
            <div class="inner-form">
                <div class="input-field" style="width:unset;">
                    <input class="form-control" id="choices-text-preset-values" type="text" placeholder="Type to search..." />
                    <button id="SearchBtn" class="btn-search" type="submit" value="Search">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </fieldset>
    </div>
</div>


<div>



</div>


<table class="table table-condensed" id="homeTable" style="border:none">

    @foreach (var m in Model)
    {
        <tr class="col-lg-2 col-md-4 col-sm-6 col-xs-12" style="text-align:center;">
            <td style="border:none">

                <span style="font-size:14px; color:white"><i>@m.Name</i></span>

                <a href='@Url.Action("Details", "Restaurants",new { id = m.Id })'>
                    <img src='@Url.Action("getImg", "Restaurants", new { id = m.Id })' class='slika' width='180' height='250' alt='Image not available' style='border-radius:10px' />
                </a>
            </td>
        </tr>
    }
</table>




@section scripts{
    <script>

        $(document).ready(function () {

            function search() {
                var SearchValue = $("#choices-text-preset-values").val();
                    var SetData = $("#homeTable");
                    SetData.html("");
                    $.ajax({
                        type: "post",
                        url: "/Home/GetSearchingData?SearchValue=" + SearchValue,
                        contentType: "html",
                        success: function (result) {
                            if (result.length == 0) {
                                SetData.append('<tr style="color:white"><td colspan="3">No Match Data</td></tr>')
                            }
                            else {
                                $.each(result, function (index, value) {
                                    var Data = "<tr   class='col-lg-2 col-md-4 col-sm-6 col-xs-12' style='text-align:center;'>" +
                                        "<td> <span>" + value.Name + "</span> " +
                                        "<a href='\\Restaurants\\Details\\" + value.Id + "'>" +
                                        "<img src='\\Restaurants\\getImg\\ " + value.Id + "' class='slika' width='180' height='250' alt='Image not available' style='border-radius:10px' />"
                                        + " </a>" +
                                        " </td > " +
                                        "</tr>";
                                    SetData.append(Data);
                                });
                            }
                        }
                    });
                $('html, body').animate({
                    scrollTop: $("#homeTable").offset().top
                }, 2000);


            }
            $(document).scroll(function () {
                scroll_start = $(this).scrollTop();
                if (scroll_start > 70) {
                    $('.navbar-nav > li > a ').css('color', 'white');
                    $('.navbar').css('background-color', 'black');
                } else {
                    $(' .navbar-nav > li > a ').css('color', 'black');
                    $('.navbar').css('background-color', 'transparent');
                }
            });
            $("footer").hide();
            $("#SearchBtn").click(search);
            $("#choices-text-preset-values").on('keyup', function (e) {
                if (e.keyCode === 13) {
                    search();
                }
            });

        });

    </script>
    <style>
        .navbar-inverse .navbar-nav > li > a {
            color: black;
        }

        .slika {
            transition: transform .2s; /* Animation */
            width: 200px;
            height: 200px;
            margin: 0 auto;
            padding: 10px;
        }

            .slika:hover {
                transform: scale(1.05); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
            }

        th::after {
            text-align: center;
        }

        th {
            text-align: center;
        }

        body {
            min-height: 100vh;
            display: -ms-flexbox;
            display: flex;
            -ms-flex-pack: center;
            justify-content: center;
            -ms-flex-align: center;
            align-items: center;
            font-family: 'Poppins', sans-serif;
            background: url(../../Images/food.jpg);
            background-size: cover;
            background-position: center center;
            padding: 15px;
        }

        .navbar {
            background-color: transparent;
            border: 0px;
        }
        .body-content {
            margin-left: 5%;
        }

        .input-field {
            min-height: 70px;
            background: #fff;
            padding: 10px 70px 10px 32px;
            font-size: 18px;
            color: #666;
            border-radius: 34px;
            display: -ms-flexbox;
            display: flex;
            -ms-flex-wrap: wrap;
            flex-wrap: wrap;
            -ms-flex-align: center;
            align-items: center;
        }

        #choices-text-preset-values {
            min-height: 70px;
            box-shadow: none;
            border-style: none;
            max-width: inherit;
        }

        .form-control:focus {
            border-color: inherit;
            -webkit-box-shadow: none;
            box-shadow: none;
        }

        #homeTable {
            background-color: #3333338f;
        }

        td, th {
            border: none;
        }
        * {
            box-sizing: content-box;
        }
    </style>
}
@section Style {
    <link href="~/Style/Home.css" rel="stylesheet" />
}